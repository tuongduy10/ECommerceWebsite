@using Microsoft.Extensions.Configuration
@using ECommerce.Application.Constants
@inject IConfiguration Configuration
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chi tiết</h6>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label>Mô tả thương hiệu</label>
            <input class="form-control mb-2 brand-description-title" placeholder="Tiêu đề" value="@ViewBag.Brand.DescriptionTitle">
            <textarea class="form-control" id="brand-description" placeholder="Nội dung">
                @ViewBag.Brand.Description
            </textarea>
        </div>
        <div class="text-right">
            <button class="update-brand btn btn-primary">Cập nhật</button>
        </div>
    </div>
</div>
<script>
    $(".update-brand").click(function(){

        var brandId = @ViewBag.Brand.BrandId;
        var descriptionTitle = $('.brand-description-title').val();
        var description = tinymce.get("brand-description").getContent();

        const param = {
            BrandId: brandId,
            DescriptionTitle: descriptionTitle,
            Description: description
        }
        PostApi("/ManageBrand/UpdateBrandDescription", param)
            .then(function(res){
                nSuccess(res);
            })
    })
</script>